<Window x:Class="Now_Playing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Now_Playing"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Now Playing" Height="120" Width="200">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Pop-Up Position" VerticalAlignment="Top" Height="16" Width="86"/>
        <RadioButton x:Name="TopCenterRadio" Content="Top Center" HorizontalAlignment="Left" Margin="22,31,0,0" VerticalAlignment="Top" Width="99" Checked="PopupPositionRadio_Checked" Height="15"/>
        <RadioButton x:Name="BottomCenterRadio" Content="Bottom Center" HorizontalAlignment="Left" Margin="22,46,0,0" VerticalAlignment="Top" Width="99" IsChecked="True" Checked="PopupPositionRadio_Checked" Height="15"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25"><Run Text="Made with 💖"/><Run Language="en-de" Text=" by Parag Nirwan"/></TextBlock>

    </Grid>
</Window>
